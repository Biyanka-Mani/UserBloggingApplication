  <style>
    #intro {
      background-image: url("https://images.unsplash.com/photo-1612367980327-7454a7276aa7?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
      height: 72vh;
    }

    /* Height for devices larger than 576px */
    @media (min-width: 300px) {
      #intro {
        margin-top: 40px;
      }
    }

  </style>
<div id="intro" class="bg-image shadow-2-strong">
<div class="mask" style="background-color: rgba(0, 0, 0, 0.8);">
    <div class="container">
        <div class="mx-auto">
            <div class="row ">
                <div class="col-8">
                    
                    <%= form_with model: @article,class:"shadow p-3 mb-3  rounded",local: true do |f| %>
                        <% if @article.errors.any? %>
                            <div id="error_explanation" class="text-white">
                            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
                            <ul>
                                <% @article.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                                <% end %>
                            </ul>
                            </div>
                        <% end %>
                        <div class="form-group ">
                            <%= f.label :title ,class:"col-2 col-form-label text-white"%>
                            <div class="col-12">
                                <%= f.text_field :title,class:"form-control shadow p-3 bg-body-tertiary rounded",placeholder:"Title of The Article" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%=f.label :Description,class:"col-2 col-form-label text-white" %>
                            <div class="col-12 ">
                                <%=f.text_area :description,class:"form-control shadow  rounded",rows:9 ,placeholder:"Description of The Article"%>
                            </div>
                        </div>
                        
                        <div class="form-group mt-5">
                            <%= f.submit class:"btn btn-outline-light   btn-lg my-6 " %>
                        </div> 
                    <% end %>
                </div>
                <%# <div class="mb-3">
                    <%= link_to '[Cancel and Return Back To Article Listing]' ,articles_path,class:"row justify-content-center mt-4 text-black" %>
                <%# </div>  %>
            </div>
        </div>
    </div>
</div>
</div>