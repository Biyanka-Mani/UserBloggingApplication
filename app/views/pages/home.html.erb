<h1 class="text-left p-2">User Dashboard</h1>

                  
<div class="container">
  <div class="row">
    <div class="col-md-4 py-3">
      <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1483546363825-7ebf25fb7513?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="...">
        <h5 class="card-title px-3">Create New Blog</h5>
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%=link_to "Create Blog",new_article_path,class:"btn btn-secondary btn-lg"%>
        </div>
      </div>
    </div>


  <% if user_signed_in? %> 
    <div class="col-md-4 py-3">
      <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1524508762098-fd966ffb6ef9?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="...">
        <h5 class="card-title px-3">My Profile</h5>
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%= link_to 'Profile', user_path(current_user), class: "btn btn-secondary btn-lg" %>
        </div>
      </div>
    </div>
 
    <div class="col-md-4 py-3">
      <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1457369804613-52c61a468e7d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="...">
        <h5 class="card-title px-3">Blogs</h5>
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%=link_to "Blogs View",articles_path,class:"btn btn-secondary btn-lg"%>
        </div>
      </div>
    </div>
  <%end%>
   <% if user_signed_in? && current_user.is_admin%>
    <div class="col-md-4 py-3">
      <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1586936893354-362ad6ae47ba?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8dXNlcnN8ZW58MHx8MHx8fDA%3D" class="card-img-top" alt="...">
        <h5 class="card-title px-3">User Mangement</h5>
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%=link_to "Users View",users_index_path,class:"btn btn-secondary btn-lg"%>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
    
