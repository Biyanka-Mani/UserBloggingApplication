
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex flex-start">
              <img class="rounded-circle shadow-1-strong me-3"
                src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(26).webp" alt="avatar" width="40"
                height="40" />
              <div class="w-100">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-primary">
                             <% if comment.user %>
                                <%= link_to "#{comment.user.first_name} #{comment.user.last_name}", user_path(comment.user), class: "text-decoration-none" %>
                            <% else %>
                                Anonymous
                            <% end %>
                        </h6>
                         <span class="text-body">
                                <%=comment.message.html_safe%>
                        </span>
                        <p class="mb-0"><%= "#{time_ago_in_words(comment.created_at)} ago" %></p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="small mb-0" style="color: #aaa;">
                            <%if user_signed_in?%>
                            <% if (current_user.id == @article.user_id || current_user.is_admin? || current_user.id == comment.user_id) %>
                                <%= link_to article_comment_path(@article, comment),class:"text-dark text-decoration-none me-3", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                                    <i class="fas fa-trash-alt "></i> Delete
                                <% end %>
                                 <% if (current_user.id == comment.user_id) %>
                                    <%= link_to edit_article_comment_path(@article, comment),class:"text-dark text-decoration-none me-3" do %>
                                        <i class="fas fa-edit"></i> Edit
                                    <% end %>
                                <% end %>
                            <%end%>
                            <%end%>
                        </p>

                        <div class="d-flex flex-row">
                            <i class="fas fa-star text-warning me-2"></i>
                            <i class="far fa-check-circle" style="color: #aaa;"></i>
                        </div>
                    </div>
              </div>
            </div>
          </div>
    </div>
